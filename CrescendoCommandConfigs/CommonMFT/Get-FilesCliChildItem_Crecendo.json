{
  "$schema": "https://aka.ms/PowerShell/Crescendo/Schemas/2022-06",
  "Commands": [
    {
      "Verb": "Get",
      "Noun": "FilesCliChildItem",
      "OriginalName": "files-cli.exe",
      "OriginalCommandElements": [
        "folders",
        "list-for",
        "--format=json,raw",
        "--use-pager=False"
      ],
      "Platform": [
        "Windows",
        "Linux",
        "MacOS"
      ],
      "DefaultParameterSetName": "Default",
      "SupportsShouldProcess": false,
      "ConfirmImpact": "None",
      "SupportsTransactions": false,
      "NoInvocation": false,
      "Description": "lists the folders and files within a folder",
      "Usage": {
        "Synopsis": "Interact with Files.com api"
      },
      "Parameters": [
        {
          "NoGap": true,
          "OriginalName": "--path=",
          "Name": "path",
          "ParameterType": "string",
          "ValueFromPipelineByPropertyName": true,
          "ParameterSetName": [
            "Default",
            "GlobalFlags"
          ],
          "Mandatory": true,
          "Description": "Specify the path"
        },
        {
          "NoGap": true,
          "OriginalName": "--concurrent-directory-list-limit=",
          "Name": "ConcurrentDirectoryListLimit",
          "ParameterType": "int",
          "ParameterSetName": [
            "Default",
            "GlobalFlags"
          ],
          "Description": "Limit the concurrent directory listings of remote directories. (default 75)"
        },
        {
          "NoGap": true,
          "OriginalName": "--filter=",
          "Name": "filter",
          "ParameterType": "string",
          "ParameterSetName": [
            "Default",
            "GlobalFlags"
          ],
          "Description": "If specified, will filter folders/files list by this string.  Wildcards of * and '?' are acceptable here."
        },
        {
          "OriginalName": null,
          "Name": "fields",
          "ParameterType": "string[]",
          "ParameterSetName": [
            "Default",
            "GlobalFlags"
          ],
          "Description": "Fields to include in output",
          "ArgumentTransform": "privFilesCli_FieldsArrayToCommaSeparated",
          "ArgumentTransformType" : "Function",
          "DefaultValue": "display_name,mtime,path,permissions,type,size",
          "AdditionalParameterAttributes":[
            "[ValidateSet('AllFields','action','created_at','crc32','display_name','download_uri','is_locked','length','md5','mime_type','mkdir_parents','mtime','part','parts','path','permissions','preview','preview_id','priority_color','provided_mtime','ref','region','restart','structure','subfolders_locked?','type','with_rename')]"
          ]
        },
        {
          "NoGap": true,
          "OriginalName": "--with-previews=True",
          "Name": "withpreviews",
          "ParameterType": "switch",
          "DefaultMissingValue": "--with-previews=False",
          "ParameterSetName": [
            "Default",
            "GlobalFlags"
          ],
          "Description": "Include file previews?"
        }
      ],
      "Examples": [],
      "OriginalText": "",
      "HelpLinks": [
        "https://www.files.com/docs/integrations/command-line-interface-cli-app"
      ],
      "OutputHandlers": [
        {
          "ParameterSetName": "Default",
          "HandlerType": "Function",
          "Handler": "privFilesCli_CommonJSONtoPSobjectHandler"
        }
      ]
    }
  ]
}